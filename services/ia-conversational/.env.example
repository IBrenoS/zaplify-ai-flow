# ================================================================
# Environment Configuration for IA Conversational Service
# ================================================================

# Application Configuration
ENVIRONMENT=development
SERVICE_NAME=ia-conversational
SERVICE_VERSION=1.0.0
LOG_LEVEL=info

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=2

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_TIMEOUT=5
REDIS_MAX_CONNECTIONS=10

# Feature Flags
ENABLE_RAG=true
ENABLE_MEMORY=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_INTENT_CLASSIFICATION=true
ENABLE_OBSERVABILITY=true

# Observability Configuration
OPENTELEMETRY_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_HEADERS=api-key=your-otel-api-key
PROMETHEUS_METRICS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Database Configuration (for pgvector)
PGVECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.8

# Conversation Configuration
MAX_CONVERSATION_HISTORY=50
CONVERSATION_TTL=3600
MEMORY_CLEANUP_INTERVAL=300

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_FORMAT=json
LOG_ROTATION=1d
LOG_RETENTION=30d

# Legacy Support (backwards compatibility)
ENV=development
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-key
CORS_ALLOW_ORIGINS=https://app.zaplify.com,https://studio.zaplify.com
RAG_TENANT_ISOLATION=strategy:schema
RAG_CACHE_TTL_SECONDS=3600
MEMORY_TTL_SECONDS=604800
