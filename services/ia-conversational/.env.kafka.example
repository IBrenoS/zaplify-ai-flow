# Kafka/Redpanda Configuration Example
# Copy to .env and uncomment/modify as needed

# Enable Kafka Integration
ENABLE_KAFKA=true

# Kafka/Redpanda Broker Configuration
KAFKA_BROKER=redpanda:9092

# Kafka Consumer Group
KAFKA_CONSUMER_GROUP=ia-conversational

# Kafka Topics
KAFKA_MESSAGE_RECEIVED_TOPIC=conversation.message_received
KAFKA_MESSAGE_GENERATED_TOPIC=conversation.message_generated

