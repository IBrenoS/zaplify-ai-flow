# ===================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===================================
# Este arquivo é carregado automaticamente quando NODE_ENV=development
# Use-o para sobrescrever configurações específicas de desenvolvimento

# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=8080
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=1.0.0
API_PREFIX=/api/v1

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
# JWT configuration for development
JWT_SECRET=dev-secret-key-32-chars-minimum-length-for-security!
JWT_EXPIRES_IN=24h
JWT_ISSUER=zaplify-api-gateway
JWT_AUDIENCE=zaplify-services
AUTH_ENABLED=true

# ===================================
# EXTERNAL SERVICES
# ===================================
# URLs dos serviços externos (desenvolvimento local)
AI_SERVICE_URL=http://localhost:8001
WHATSAPP_SERVICE_URL=http://localhost:8002
FUNNEL_ENGINE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004

# Timeout para health checks dos serviços (ms)
SERVICE_TIMEOUT_MS=5000

# ===================================
# CACHE & REDIS CONFIGURATION
# ===================================
# Redis configuration (opcional em desenvolvimento)
# REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_SECONDS=300

# ===================================
# RATE LIMITING
# ===================================
# Rate limiting configuration (mais permissivo em dev)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10000
RATE_LIMIT_MAX_REQUESTS_PER_TENANT=5000
RATE_LIMIT_ENABLED=true

# ===================================
# CORS CONFIGURATION
# ===================================
# Origens permitidas para CORS (separadas por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ===================================
# SECURITY HEADERS
# ===================================
# Security middleware configuration (mais permissivo em dev)
SECURITY_HSTS_ENABLED=false
SECURITY_CSP_ENABLED=false
SECURITY_FRAME_GUARD_ENABLED=true
ALLOWED_HOSTS=localhost,127.0.0.1
TRUST_PROXY=false

# ===================================
# MONITORING & OBSERVABILITY
# ===================================
# Features de monitoramento e documentação
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=true
REQUEST_LOGGING_ENABLED=true
ERROR_STACK_TRACE_ENABLED=true
