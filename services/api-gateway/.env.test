# Test Environment Configuration
NODE_ENV=test
PORT=8080

# CORS - Permissive for testing
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true

# JWT Authentication (Test)
JWT_SECRET=test-secret-key-32-chars-minimum-length-for-security-and-beyond!
JWT_ISSUER=zaplify-auth
JWT_EXPIRES_IN=1h

# Rate Limiting (Permissive for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_PER_TENANT=500
RATE_LIMIT_ENABLED=true

# URLs dos Servi√ßos (Test)
AI_SERVICE_URL=http://ia-service:8001
WHATSAPP_SERVICE_URL=http://whatsapp-service:8081
FUNNEL_ENGINE_URL=http://funnel-engine:8082
ANALYTICS_SERVICE_URL=http://analytics-service:8002
SERVICE_TIMEOUT_MS=5000

# Redis e Cache (Test)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=300

# Security (Permissive for testing)
SECURITY_HSTS_ENABLED=false
SECURITY_CSP_ENABLED=false
SECURITY_FRAME_GUARD_ENABLED=true
TRUST_PROXY=false

# Monitoring (Test defaults)
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
MOCK_HEALTH=false
SWAGGER_ENABLED=false
REQUEST_LOGGING_ENABLED=false
ERROR_STACK_TRACE_ENABLED=true

# Logs (Minimal for testing)
LOG_LEVEL=error
