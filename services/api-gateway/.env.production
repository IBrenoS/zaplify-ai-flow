# ===================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===================================
# Este arquivo é carregado automaticamente quando NODE_ENV=production
# Use variáveis de ambiente ou este arquivo para configuração de produção

# ===================================
# SERVER CONFIGURATION
# ===================================
PORT=8080
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info
API_VERSION=1.0.0
API_PREFIX=/api/v1

# ===================================
# AUTHENTICATION & SECURITY
# ===================================
# OBRIGATÓRIO: Configure JWT_SECRET com valor seguro em produção
# JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-chars
JWT_EXPIRES_IN=24h
JWT_ISSUER=zaplify-api-gateway
JWT_AUDIENCE=zaplify-services
AUTH_ENABLED=true

# ===================================
# EXTERNAL SERVICES
# ===================================
# URLs dos serviços externos (produção)
AI_SERVICE_URL=https://ai.zaplify.com
WHATSAPP_SERVICE_URL=https://whatsapp.zaplify.com
FUNNEL_ENGINE_URL=https://funnel.zaplify.com
ANALYTICS_SERVICE_URL=https://analytics.zaplify.com

# Timeout para health checks dos serviços (ms)
SERVICE_TIMEOUT_MS=10000

# ===================================
# CACHE & REDIS CONFIGURATION
# ===================================
# Redis configuration (recomendado em produção)
# REDIS_URL=redis://redis.zaplify.com:6379
REDIS_HOST=redis.zaplify.com
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
REDIS_DB=0
CACHE_TTL_SECONDS=300

# ===================================
# RATE LIMITING
# ===================================
# Rate limiting configuration (mais restritivo em produção)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_PER_TENANT=500
RATE_LIMIT_ENABLED=true

# ===================================
# CORS CONFIGURATION
# ===================================
# Origens permitidas para CORS (apenas domínios de produção)
CORS_ORIGINS=https://app.zaplify.com,https://dashboard.zaplify.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# ===================================
# SECURITY HEADERS
# ===================================
# Security middleware configuration (máxima segurança em produção)
SECURITY_HSTS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_FRAME_GUARD_ENABLED=true
ALLOWED_HOSTS=api.zaplify.com,*.zaplify.com
TRUST_PROXY=true

# ===================================
# MONITORING & OBSERVABILITY
# ===================================
# Features de monitoramento (Swagger desabilitado em produção)
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
SWAGGER_ENABLED=false
REQUEST_LOGGING_ENABLED=true
ERROR_STACK_TRACE_ENABLED=false
